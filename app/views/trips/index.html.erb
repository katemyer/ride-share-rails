<h1>Trips List</h1>

<table style="text-align: center;">
  <tr>
    <th>Trip ID</th>
    <th>Trip Details</th>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Date</th>
    <th>Rating</th>
    <th>Cost</th>
  </tr>
    <% @trips.each do |trip|  %>
  <tr>
    <td><%= trip.id %></td>
    <td><%= link_to "Show details", trip %></td>
    <td><%= trip.driver_id %></td>
    <td><%= trip.passenger_id %></td>
    <td><%= trip[:date] %></td>
    <td><%= trip[:rating] %></td>
    <td>$<%= trip[:cost] %></td>
    <td><%= link_to "Edit", edit_trip_path(trip.id), method: :get %> </td>
    <td><%= link_to "Delete", trip_path(trip.id), method: :delete, data: {confirm: "Are you super sure?"}%></td>
  </tr>
  <% end %>
</table>

<div class="paginationlinks">
  <%= link_to( "First Page",  trips_path(page: 0), :class => "hello") %>
  |
  <%= link_to "Next Page", trips_path(page: @page + 1) %>

  <%#https://ask.puppet.com/question/3420/if-else-statement-in-erb-template/%>
  <% if @page != 0 %> 
  |      
    <%= link_to "Previous Page", trips_path(page: @page - 1) %> |
    <%= link_to "Last Page", trips_path(page: @last_page) %>
  <% end %>
</div>



