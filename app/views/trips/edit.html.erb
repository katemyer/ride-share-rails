<%= form_with model: @trip, class: 'edit-trip' do |f| %>
  <p>Please provide the following information to edit the trip in our database:</p>
  <%= f.label :date %>
  <%= f.text_field :date %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit "Save Trip Changes", class: "button" %>
<% end %>