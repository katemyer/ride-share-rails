<%= form_with model: @passenger, class: 'edit-passenger' do |f| %>
  <p>Please provide the following information to edit your passenger in our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.submit "Edit Passenger", class: "passenger-button" %>
<% end %>